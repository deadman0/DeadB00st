busybox clear
   

busybox sleep 2
busybox echo ""
busybox echo "Checking all installed files, please wait..."
busybox sleep 2

busybox echo ""
busybox echo "Checking DeadB00st binary..."
busybox sleep 1
if [ -e /system/bin/DB ]; then
	busybox echo ""
	busybox echo "DeadB00st is installed..."
	busybox sleep 1
else
	busybox echo ""
	busybox echo "DeadB00st was not found, re-install DeadB00st."
	busybox sleep 1
fi



busybox echo ""
busybox echo "Checking files is finished!"
busybox sleep 3
